    "version": "0.2.0",
    "configurations": [
        {
            "name": "Fine-Tunning",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/src/train_baseline.py",
            "cwd": "${workspaceFolder}",
            "env": {
                "PYTHONPATH": "${workspaceFolder}",
                "CUDA_VISIBLE_DEVICES": "0"
            }
        },
        {
            "name": "Evaluation OOD",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/src/evaluate_ood.py",
            "cwd": "${workspaceFolder}",
            "env": {
                "PYTHONPATH": "${workspaceFolder}",
                "CUDA_VISIBLE_DEVICES": "0"
            }
        },
        {
            "name": "Corpus Preparation",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/adaptation/dapt/prepare_dapt_corpus.py",
            "cwd": "${workspaceFolder}",
            "env": {
                "PYTHONPATH": "${workspaceFolder}",
                "CUDA_VISIBLE_DEVICES": "0"
            }
        },
        {
            "name": "DAPT Adaptation",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/adaptation/dapt/run_dapt.py",
            "cwd": "${workspaceFolder}",
            "env": {
                "PYTHONPATH": "${workspaceFolder}",
                "CUDA_VISIBLE_DEVICES": "0"
            }
        }
    ]
}